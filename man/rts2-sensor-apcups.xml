  <refnamediv>
    <refname>&dhpackage;</refname>
    <refpurpose>Monitor available disk space. Send warnings if disk space drops bellow predefined value.</refpurpose>
  </refnamediv>
  <refsynopsisdiv>
    <cmdsynopsis>
      <command>&dhpackage;</command>
      <arg choice="opt">
	<arg choice="plain"><option>-i</option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>--local-port <replaceable>port number</replaceable></option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>--localhost <replaceable>hostname</replaceable></option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>--server <replaceable>hostname[:port]</replaceable></option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>--modefile <replaceable>filename</replaceable></option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>-M <replaceable>mailaddress</replaceable></option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>-d <replaceable>device name</replaceable></option></arg>
      </arg>
      <arg choice="opt">
	<arg choice="plain"><option>-a <replaceable>hostname[:port]</replaceable></option></arg>
      </arg>
    </cmdsynopsis>

    <cmdsynopsis>
      <command>&dhpackage;</command>
      <arg choice="opt">
        <arg choice="plain"><option>-h</option></arg>
	<arg choice="plain"><option>--help</option></arg>
