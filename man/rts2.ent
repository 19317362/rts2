<!ENTITY deviceapp "&basicapp;
      <arg choice='opt'>
	<arg choice='plain'><option>-i</option></arg>
      </arg>
      <arg choice='opt'>
	<arg choice='plain'><option>--local-port <replaceable>port number</replaceable></option></arg>
      </arg>
      <arg choice='opt'>
	<arg choice='plain'><option>--localhost <replaceable>hostname</replaceable></option></arg>
      </arg>
      <arg choice='opt'>
	<arg choice='plain'><option>--server <replaceable>hostname[:port]</replaceable></option></arg>
      </arg>
      <arg choice='opt'>
	<arg choice='plain'><option>--modefile <replaceable>filename</replaceable></option></arg>
      </arg>
      <arg choice='opt'>
	<arg choice='plain'><option>-d <replaceable>device name</replaceable></option></arg>
      </arg>" >

<!ENTITY deviceapplist "&basicapplist;
      <varlistentry>
        <term><option>--server <replaceable class='parameter'>server-name[:port]</replaceable></option></term>
        <listitem>
          <para>
	    Specify name of the host and possibly port, which runs
	    <citerefentry><refentrytitle>rts2-centrald</refentrytitle><manvolnum>1</manvolnum></citerefentry>.
	    This option is needed only for setups that use multiple computers.
	    Its default is localhost for hostname and 617 for port number. If
	    only hostname is provided, default port number - 617 - is used. 
	    Default will work for simple setups.
	  </para>
        </listitem>
      </varlistentry>" >

<!ENTITY clientapp "&basicapp;      
      <arg choice='opt'>
	<arg choice='plain'><option>--server <replaceable>central server hostname</replaceable></option></arg>
      </arg>
      <arg choice='opt'>
	<arg choice='plain'><option>--port <replaceable>port number</replaceable></option></arg>
      </arg>" >

<!ENTITY clientapplist "&basicapplist;
      <varlistentry>
        <term><option>--server <replaceable>central server hostname</replaceable></option></term>
        <listitem>
          <para>Change central server location. Defaults to localhost.</para>
        </listitem>
      </varlistentry>
      <varlistentry>
        <term><option>--port <replaceable>port number</replaceable></option></term>
        <listitem>
          <para>Change central server port number. Default value is specified with compilation, default is 617.</para>
        </listitem>
      </varlistentry>" >
