#!/bin/bash

echo "Processing $1"

dirname=`dirname $1`
imgname=`echo $1 | sed "s#^$dirname/*##"`

cd $dirname

# image processing

/home/rtopera/src/bdark $imgname
/home/rtopera/bin/detect $imgname
if pwd | grep "CNF1"; then
	/home/rtopera/bin/npast $imgname 2>$imgname.past
else
	/home/rtopera/bin/past $imgname 2>$imgname.past
fi
