#!/bin/bash

echo "Processing $1"

dirname=`dirname $1`
imgname=`echo $1 | sed "s#^$dirname/*##"`

cd $dirname

# image processing

/home/rtopera/src/bdark $imgname
/home/rtopera/bin/detect $imgname
/home/rtopera/bin/past $imgname 2>/dev/null
#/home/rtopera/bin/rsol $imgname >/dev/null 2>&1
rm $imgname.sex $imgname.salida

