
set curfilname=`tele filter ?`

set curfilt=`grep -n $curfilname /Realtime/lib/filt.dat | cut -f1 -d:`

switch ($1)
	case [0-9]:
		if ($curfilt == $1) then
			echo "filter $1 already set"
		else
			tele filter $1
		endif
		breaksw
	default:
		if ($curfilname == $1) then
		  	echo "filter $1 already set"
		else	
			set filt=`grep -n $1 /Realtime/lib/filt.dat | cut -f1 -d:`
			tele filter $filt
		endif	
		breaksw
endsw
